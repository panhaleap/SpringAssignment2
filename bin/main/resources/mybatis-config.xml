<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeAliases>
     <typeAlias type="com.mcnc.entity.Category" alias="category"/>
     <typeAlias type="com.mcnc.entity.BoardComment" alias="boardComment"/>
     <typeAlias type="com.mcnc.entity.Type" alias="Type"/>     
  </typeAliases>  
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="org.postgresql.Driver"/>
        <property name="url" value="jdbc:postgresql://localhost:5432/faq"/>
        <property name="username" value="postgres"/>
        <property name="password" value="123"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="com/mcnc/dao/CategoryMapper.xml" />
    <!-- <mapper resource="com/mcnc/dao/BoardCommentMapper.xml" /> -->
    <mapper resource="com/mcnc/dao/BoardCommentMapper.xml"/>
  </mappers>
</configuration>